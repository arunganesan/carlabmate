<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              tools:context=".InfoViewFragment"
              android:layout_height="match_parent">

<android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15"
        android:id="@+id/titleConstraintLayout">

    <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/horizGuideline"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.5"/>

    <TextView
            android:text="App Title"
            android:fontFamily="@font/lobstertwo_bold"
            android:textSize="75dp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            app:layout_constraintBottom_toTopOf="@id/horizGuideline"
            app:layout_constraintLeft_creator="@id/titleConstraintLayout"
            android:id="@+id/appTitle"
            android:layout_weight="15"/>
</android.support.constraint.ConstraintLayout>
    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:orientation="horizontal" android:layout_gravity="center"
    >
        <TextView
                android:text="Powered by"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:textColor="#000"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/quicksand"
                android:textSize="24sp"
        />


        <TextView
                android:text="CarLab"
                android:fontFamily="@font/lobstertwo_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="24sp"
                android:id="@+id/textView4"/>

    </LinearLayout>

    <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/app_name_text"
            android:fontFamily="@font/quicksand"
            android:textSize="24sp"
            android:textColor="#000"
            android:textAlignment="center"/>


    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/uid_text"
        android:textSize="24sp"
        android:fontFamily="@font/quicksand"
        android:textColor="#000"
        android:textAlignment="center"
/>
</LinearLayout>