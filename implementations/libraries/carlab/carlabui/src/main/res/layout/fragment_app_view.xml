<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context=".AppViewFragment">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/middleware_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="4"
                android:fontFamily="@font/quicksand_bold"
                android:text="App details"
                android:textColor="#000000"
                android:textAlignment="center"
                android:textSize="25sp" />

    </LinearLayout>



    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:id="@+id/middleware_content"
    >
        <TextView
                android:text="CarLab is currently not running. Please try again later. "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textSize="25sp"
                android:visibility="invisible"
                android:id="@+id/not_running_text"
            />
    </FrameLayout>
</LinearLayout>